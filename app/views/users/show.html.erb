<!-- 削除用フラッシュメッセージ -->
<div class="flash">
  <%= flash[:notice] %>
</div>

<!-- ユーザーの詳細 -->
<div>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h6><%= @user.name %></h6>
</div>


<!-- bookの新規登録機能 -->
<%= form_with model: @book do |f| %>
<div class="field">
  <label for="title">Title</label>
  <div class="form">
    <%= f.text_field:title %>
  </div>
</div>

<div class="field">
  <label for="body">Body</label>
  <div class="form">
    <%= f.text_area:body %>
  </div>
</div>

<div class="field">
  <div class="action">
    <%=f.submit "Create Book"%>
  </div>
</div>
<% end %>
  
  
    <h1>Books</h1>

   <table>
    <thead>
      <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<!-- 一覧画面 -->
  <% @books.each do |book| %>
   <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
			<td><%= link_to "Edit", edit_book_path(book.id) %></td>
			<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
   </tbody>
  <% end %>
</table>

