<!-- フラッシュメッセージ -->
<% flash.each do |message_type, message| %>
  <%= content_tag :div, message, class: message_type %>
<% end %>
  
<div class="container px-5 px-sm-0">
  <div class="row">
    <!-- col3部分を共通化 -->
    <%= render 'list', user: @user, book: @book %>

    <!-- ユーザーの投稿一覧 -->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
            <tbody> </tbody>
          </thead>

        <!-- 一覧画面 -->
          <% @books.each do |book| %>
           <tbody>
            <tr>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= image_tag book.get_image %>
                <% end %>
              </td>
              <td><%= link_to book.title, "book_path" %></td>
              <td><%= book.body %></td>
            </tr>
           </tbody>
          <% end %>
        </table>
        
        <!--バリデーション-->
        <% if @book.errors.any? %>
          <%=  @book.errors.count %>エラーが発生
        <% end %>
    </div>
  </div>
</div>

