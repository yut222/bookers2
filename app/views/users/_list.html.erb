<div class="col-md-3">

  <!-- ユーザーの詳細 -->
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %> <!-- @user → user -->
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th> <!-- @user → user -->
      </tr>
      <tr>
        <th>introduction</th>
        <th></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <a class="btn btn-outline-secondary btn-block edit_user_path" href="edit_user_path">
      <i class="fas fa-user-cog"></i>
    </a>
  </div>
  
  <!-- bookの新規登録機能 -->
  <h2 class="mt-3">New book</h2>
  <%= form_with model: book do |f| %> <!-- @book → book -->
  <div class="form-group">
    <label for="book_title">Title</label>
    <input class="form-control book_title" type="text" name="book[title]" id="book_title">
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
  </div>
  <div class="form-group">
    <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
  </div>
  <% end %>
</div>