<div class="container px-5 px-sm-0">
  <div class="row">

    <!-- col3部分を共通化 -->
    <%= render 'list', user: @user, book: @book %>

    <!-- ユーザーの投稿一覧 -->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <!-- 一覧画面 -->
        <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image(100,100) %></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id) %></td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>