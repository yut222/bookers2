<div class="container px-5 px-sm-0">
  <div class="row">

    <!-- col3部分を共通化 -->
    <%= render 'users/list', user: @user, book: @book %>

    <!-- ユーザーの投稿一覧 -->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td><%= image_tag book.user.get_profile_image(100,100) %></td>
                  <td><%= link_to book.title, book_path(book.id) %></td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
            </tbody>
          </thead>
        </table>
    </div>

  </div>
</div>

