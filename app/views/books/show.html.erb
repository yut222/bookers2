<div class="container px-5 px-sm-0">
  <div class="row">

<!--col-md-3共通-->
    <!-- ユーザーの投稿詳細 -->
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">

        <% @books.each do |book| %>
          <tbody>
            <tr>
              <td><%= link_to "book.title", book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td><%= link_to "Edit", edit_book_path(book.id) %></td>
              <td><%= link_to "Destroy", books_path, method: :delete, "data-confirm" => "Are you sure?" %></td>
            </tr>
          </tbody>
        <% end %>
 
      </table>
    </div>