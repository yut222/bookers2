<div class="container px-5 px-sm-0">
  <div class="row">

<!--col-md-3共通-->
    <div class="col-md-3">

        <!-- ユーザーの詳細 -->
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>

        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <a class="btn btn-outline-secondary btn-block edit_user_path" href="/users/:id/edit">
            <i class="fas fa-user-cog"></i>
          </a>
             <% if @user == current_user %>
              <p><%= link_to "Edit", edit_user_path(@user) %></p>
            <% end %>
        </div>

        <!-- bookの新規登録機能 -->
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <input class="form-control book_title" type="text" name="book[title]" id="book_title">
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
        </div>
        <% end %>
    </div>
    
    
    <!-- ユーザーの投稿詳細 -->
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">

        <% @books.each do |book| %>
          <tbody>
            <tr>
              <%= image_tag book.get_image %>
              <td><%= link_to "book.title", book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
              <td><%= book.user.name %></td>
              <td><%= link_to "Edit", edit_book_path(book.id) %></td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?"  %>
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
        
        

      </table>
    </div>